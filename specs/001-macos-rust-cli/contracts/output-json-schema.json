{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EntitlementScanOutput",
  "type": "object",
  "required": ["results", "summary"],
  "properties": {
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "entitlements", "entitlement_count"],
        "properties": {
          "path": { "type": "string" },
          "entitlements": { "type": "object", "additionalProperties": true },
          "entitlement_count": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "summary": {
      "type": "object",
      "required": ["scanned", "matched", "skipped_unreadable", "duration_ms"],
      "properties": {
        "scanned": { "type": "integer", "minimum": 0 },
        "matched": { "type": "integer", "minimum": 0 },
        "skipped_unreadable": { "type": "integer", "minimum": 0 },
        "duration_ms": { "type": "integer", "minimum": 0 },
        "interrupted": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
